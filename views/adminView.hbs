<div>
    <h1>{{FirstName}} {{LastName}}</h1>
    <h2>Username: {{Username}}</h2>
</div>

<h2>Posts:</h2>


<ul>
    <table>
        <tr>
            <th>PostId</th>
            <th>Post Title</th>
            <th>Post Body</th>
        </tr>

        {{#each postsFound}}
        <tr>
            <li>
                <form id="deletePost" name="deletePost" method="POST" action="/users/admin/deletePost/{{PostId}}">
                    <td>{{PostId}}</td>
                    <td>{{PostTitle}}</td>
                    <td>{{PostBody}}</td>
                    <td><button type="submit">Delete</button></td>
                    <input type="hidden" id="authorId" name="authorId" value="{{UserId}}">
                </form>
            </li>
        </tr>
        {{/each}}

    </table>

</ul>